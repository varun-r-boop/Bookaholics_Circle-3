<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF91AF"
    tools:context="com.example.seattle_7.bookaholics_circle.Imagecapture">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the below button to take photo from camera and display it in image view"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/image_from_camera"
        android:layout_width="200dp"

        android:layout_height="200dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/take_image_from_camera"
        android:layout_alignRight="@+id/take_image_from_camera"
        android:layout_alignEnd="@+id/take_image_from_camera" />

    <Button
        android:id="@+id/take_image_from_camera"
        android:layout_width="wrap_content"
        android:onClick="takeImageFromCamera"
        android:layout_height="wrap_content"
        android:text="Take Photo From Camera"
        android:layout_marginTop="54dp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
