<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99"

    tools:context="com.example.seattle_7.bookaholics_circle.upload_doc"

    >


    <ImageView

        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/chat"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:background="@drawable/btn_login_reg_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Group Chat"
        android:textColor="#d2f"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_login_reg_design"

        android:text="  "
        android:textColor="#d2f"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginTop="39dp"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3" />

    <ImageView

        app:srcCompat="@drawable/logo"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/imageView"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:layout_alignRight="@+id/b3"
        android:layout_alignEnd="@+id/b3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Enter Book Name and Search"
        tools:textColor="@color/colorAccent"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/b3"
        android:background="@drawable/btn_login_reg_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" User Profile"
        android:textColor="#d2f"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_reg_design"

        android:text="Search Process"
        android:textColor="#d2f"
        tools:ignore="HardcodedText"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/edittext3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />


</RelativeLayout>
